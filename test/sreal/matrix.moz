include Matrix

def r_1, r_2, r_3: Real

def Ir = mmRealId 3
def I = mmSRealId 3
def M = mmSRealZero (3, 3)
def A = listToMatrix [[r_1, r_2, r_3],
                      [r_1 + r_2, r_2 + r_3, r_1 + r_3],
                      [r_1, r_2, r_3]
                     ] M

def v = listToMatrix [[r_1, r_2, r_3]] (mmSRealZero (1, 3))
def e1: <Real> = 1.
def e2: <Real> = -1.
def B = listToMatrix [[1., 0., -1.],
                      [0., 1., -1.],
                      [1., 0., 1.]
                     ] (mmSRealZero (3, 3))
def C = listToMatrix [[r_1 - r_3],
                      [r_2 - r_3],
                      [r_1 + r_3]
                     ] (mmSRealZero (3, 1))

def _ = dp A
def _ = dp (A + M)

def _ = dp M
def _ = dp (I * M)

def _ = dp A
def _ = dp (I * A)

def _ = dp C
def _ = dp (B * (tr v))

def _ = dp A
def _ = dp (A * (real2sreal Ir))

def _ = dp (r_1 *. I)
def _ = dp (2. *. I)
