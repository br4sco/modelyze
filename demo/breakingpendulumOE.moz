include HDAELANG
include Simulate

def pi = 3.1415
def g = 9.81
def l = 3.
def m = 5.
def angle = (-135.0)*pi/180.0
def x, y, vx, vy, T: Real

def pendulum = {
  init x (l*cos(angle));
  init y (l*sin(angle));
  -T*x/l = m*(der vx);
  -T*y/l - m*g = m*(der vy);
  vy = der y;
  vx = der x;
  x^2. + y^2. = l^2.;
}

def freefall(y0: <Real>, vy0: <Real>) -> Equations = {
  reinit x x;
  reinit y y0;
  reinit vx vx;
  reinit vy vy0;
  der x = vx;
  der y = vy;
  der vx = 0.;
  der vy = (-g);
}

def bounce(y0: <Real>, vy0: <Real>) -> Equations = {
  switch (freefall y0 vy0) (fun x: () -> bounce (-10.) (-0.7*vy)) (y + 10.)
}

def bpendulum = {
  switch pendulum (fun x: () -> bounce y vy) (T - 70.);
}

// def monitored = [(x, "x"), (y, "y"), (T, "T")]
def monitored = [(x, "x"), (y, "y")]
def main = print(pprintSimulation (simulatehdae bpendulum 0. 0.1 6.0 monitored))
