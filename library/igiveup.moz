def eval_inits(m: MModel, s: (<Real> -> Real), z :State) -> State = {
  match m with
  | m_1 ++ m_2 -> eval_inits m_2 s (eval_inits m_1 s z)
  | switch m_1 _ _ -> eval_inits m_1 s z
  | init v e -> state_add v (s e) z
  | _ -> z
}

