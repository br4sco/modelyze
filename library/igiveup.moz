def cdae_to_dae(cdae: Equations) -> Equations = {
  match cdae with
  | d_1; d_2 -> (cdae_to_dae d_1); (cdae_to_dae d_2)
  | lhs = rhs -> cdae
  | _ -> NoEqn
}

