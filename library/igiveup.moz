def get_topology(m: Model) -> Topology = {
  def work(m: Model, acc: Topology) -> Topology = {
    match m with
    | m_1; m_2 -> work m_2 (work m_1 acc)
    | Branch _ _ _ _ -> Set.add m acc
    | _ -> acc
  };
  work m (Set.empty)
}

