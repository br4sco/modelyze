def eval_left_limits(m: Model, z_ll: State) -> Model = {
  match m with
  | m_1; m_2 -> (eval_left_limits m_1 z_ll); (eval_left_limits m_2 z_ll)
  | e_1 = e_2 -> (eval_left_limit e_1 z_ll) = (eval_left_limit e_2 z_ll)
  | e_1 <= e_2 -> (eval_left_limit e_1 z_ll) <= (eval_left_limit e_2 z_ll)
  | _ -> m
}

