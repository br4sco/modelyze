def eval_left_limit(e: <Real>, z_ll: State) -> <Real> = {
  def work(e: <?>) -> <?> = {
    match e with
    | pre x -> eval_expr x z_ll
    | f a -> (work f) (work a)
    | _ -> e
    };
  work e    
}

