def consistent_w_dae(d: Equations, z: State) -> Bool = {
  def epsilon = 1e-8;
  match d with
  | d_1; d_2 -> (consistent_w_dae d_1 z) && (consistent_w_dae d_2 z)
  | lhs = rhs -> abs((eval_expr lhs z) - (eval_expr rhs z)) < epsilon
  | _ -> error "expected a DAE in consistent_w_dae"
}

