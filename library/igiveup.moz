def stable(d: Ieqs, z: State) -> Bool = {
  match d with
  | d_1; d_2 -> (stable d_1 z) && (stable d_2 z)
  | lhs <= rhs -> (eval_expr lhs z) < (eval_expr rhs z)
  | _ -> error "expected a Ieqs in stable"
}

