def elab_switches(m: MModel, s: (<Real> -> Real)) -> MModel = {
  match m with
  | m_1 ++ m_2 -> (elab_switches m_1 s) ++ (elab_switches m_2 s)
  | switch m_1 e (lift m_2 :(() -> ?)) ->
    if (s e) > 0. then switch (elab_switches m_1 s) e m_2
    else m_2 ()
  | _ -> m
}

def mmodel_to_model(m: MModel) -> Model = {
  match m with
  | m_1 ++ m_2 -> (mmodel_to_model m_1); (mmodel_to_model m_2)
  | switch m_1 e _ -> (mmodel_to_model m_1); (0. <= e)
  | model m_1 -> m_1
  | _ -> NoEqn
}

