def eval_mexpr(e: <Real>, z_ll: State, z_0: State) -> Real = {
  def work(e: <?>) -> ? = {
    match e with
    | pre x -> eval_expr x z_ll
    | der x -> eval_expr e z_0
    | sym: Real -> eval_expr e z_0
    | f a -> (work f) (work a)
    | lift v: ? -> v
    | _ -> error "unsupported model construct"  
    };
  work e    
}

